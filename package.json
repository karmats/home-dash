{
  "name": "home-dash",
  "version": "0.1.0",
  "private": true,
  "browserslist": "> 0.25%, not dead",
  "dependencies": {
    "date-fns": "^2.26.0",
    "express": "^4.17.1",
    "express-request-id": "^1.4.1",
    "form-data": "^4.0.0",
    "googleapis": "^91.0.0",
    "node-fetch": "^2.6.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-svg": "^14.1.3",
    "rss-parser": "^3.12.0",
    "url-loader": "^4.1.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.0.1",
    "@parcel/transformer-webmanifest": "^2.0.1",
    "@testing-library/react": "^12.1.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "@types/node-fetch": "^2.5.12",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "camelcase": "^6.2.1",
    "concurrently": "^6.4.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.3.1",
    "jest-environment-jsdom-fourteen": "^1.0.1",
    "nodemon": "^2.0.15",
    "parcel": "^2.0.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  },
  "resolutions": {
    "node-forge": "0.10.0"
  },
  "scripts": {
    "start": "concurrently --kill-others-on-fail \"npm:client\" \"npm:server\"",
    "client": "parcel client/index.html -p 3000",
    "preserver": "npm run build:server",
    "server": "nodemon build/server/server.js",
    "prebuild:server": "rm -rf build/server",
    "build:server": "tsc -p tsconfig.server.json",
    "prebuild:client": "rm -rf build/client",
    "build:client": "parcel build client/index.html --dist-dir build/client",
    "postbuild:client": "cp -r public/svgs build/client",
    "build": "npm run build:client && npm run build:server",
    "test": "jest",
    "lint": "eslint ./",
    "format": "prettier ./**/*.{html,json,md,css,ts,tsx} --write"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/config/setupTests.ts"
    ],
    "silent": false,
    "testEnvironment": "jest-environment-jsdom",
    "testRegex": "((\\.|/)test)\\.tsx?$",
    "transform": {
      "^.+\\.css$": "<rootDir>/jest/transformers/cssTransform.js",
      "^(?!.*\\.(js|jsx|ts|tsx|css|json)$)": "<rootDir>/jest/transformers/fileTransform.js"
    }
  }
}
